{
  "name": "workspace",
  "type": "module",
  "version": "0.6.0",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "engines": {
    "node": ">=21.7.3",
    "pnpm": ">=9.6.0",
    "npm": ">=10.5.0"
  },
  "scripts": {
    "postinstall": "npx simple-git-hooks",
    "release": "bumpp -r",
    "test": "pnpm run --recursive test --coverage"
  },
  "devDependencies": {
    "bumpp": "^9.5.1",
    "lint-staged": "^15.2.9",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm run --filter website lint --fix"
  }
}
